<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.soco.ebusiness.soco.RezeptSuchenActivity">


    <TextView
        android:id="@+id/textView_rezept_suchen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="false"
        android:layout_alignParentLeft="false"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:text="Suchtext eingeben"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/editText_rezept_suche"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView_rezept_suchen"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="46dp"
        android:hint="Suchen..."
        android:singleLine="true"
        android:textColorHint="#989995" />

    <Button
        android:id="@+id/btn_rezept_suchen"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="41dp"
        android:onClick="rezeptSuchen"
        android:text="@string/btn_rezept_suche" />

    <TextView
        android:id="@+id/textView_suchen_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editText_rezept_suche"
        android:layout_marginLeft="26dp"
        android:layout_marginStart="26dp"
        android:text="Suche in:" />

    <RadioGroup
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RadioButton
            android:id="@+id/rb_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/textView_suchen_in"
            android:layout_marginLeft="24dp"
            android:checked="true"
            android:text="Rezeptname" />

        <RadioButton
            android:id="@+id/rb_zutaten"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/rb_beschreibung"
            android:layout_marginLeft="24dp"
            android:checked="false"
            android:text="Zutaten" />

        <RadioButton
            android:id="@+id/rb_beschreibung"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/rb_name"
            android:layout_marginLeft="24dp"
            android:checked="false"
            android:text="Beschreibung" />
    </RadioGroup>

</RelativeLayout>
