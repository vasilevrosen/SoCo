<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.soco.ebusiness.soco.RezeptSuchenActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Hier den Suchtext eingeben"
        android:id="@+id/textView_rezept_suchen"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="false"
        android:layout_alignParentBottom="false"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal" />

    <Switch
        android:layout_margin="5dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Rezeptname Durchsuchen"
        android:id="@+id/switch_name_suchen"
        android:checked="true"
        android:layout_below="@+id/editText_rezept_suche"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="36dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText_rezept_suche"
        android:hint="Suchen..."
        android:textColorHint="#989995"
        android:layout_below="@+id/textView_rezept_suchen"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="46dp"
        android:layout_marginBottom="30dp" />

    <Switch
        android:layout_margin="5dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Zutaten Durchsuchen"
        android:id="@+id/switch_zutaten_durchsuchen"
        android:checked="false"
        android:layout_below="@+id/switch_name_suchen"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Switch
        android:layout_margin="5dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Beschreibung Durchsuchen"
        android:id="@+id/switch_beschreibung_durchsuchen"
        android:checked="false"
        android:layout_below="@+id/switch_zutaten_durchsuchen"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_rezept_suche"
        android:id="@+id/btn_rezept_suchen"
        android:onClick="rezeptSuchen"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="41dp" />

</RelativeLayout>
