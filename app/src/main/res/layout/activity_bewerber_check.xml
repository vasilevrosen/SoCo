<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.soco.ebusiness.soco.BewerberCheckActivity">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/BewerberName"
        android:textSize="24dp"
        android:textStyle="bold"
        android:gravity="center"
        android:text=""/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:text="Bewerber annehmen"
        android:id="@+id/ButtonBewerberAnehmen"
        android:layout_below="@+id/BewerberName"
        android:layout_marginTop="20dp"
        android:onClick="onClickAnnahmen"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:text="Bewerber ablehnen"
        android:id="@+id/ButtonBewerberAblehnen"
        android:layout_below="@+id/ButtonBewerberAnehmen"
        android:layout_marginTop="20dp"
        android:onClick="onClickAblehnung"/>

</RelativeLayout>
