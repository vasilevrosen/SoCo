<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- The main content view -->
    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <!-- Add content here -->
        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <!-- TODO:USER ACCESS Permission -->
            <Button
                android:layout_width="fill_parent"
                android:enabled="true"
                android:visibility="visible"
                android:layout_height="wrap_content"
                android:text="@string/title_activity_meineevents"
                android:id="@+id/btn_meine_events"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="100dp"
                android:height="80dp"
                android:onClick="meine_events"
                android:singleLine="false"
                android:layout_gravity="center_horizontal|top" />


            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/btn_event_erstellen"
                android:id="@+id/btn_event_erstellen"
                android:enabled="true"
                android:visibility="visible"
                android:height="80dp"
                android:onClick="create_event"
                android:layout_below="@+id/btn_meine_events"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="65dp"
                android:layout_gravity="center_horizontal|bottom" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/btn_event_suchen"
                android:id="@+id/event_suchen"
                android:height="80dp"
                android:onClick="event_map"
                android:layout_below="@+id/btn_event_suchen"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="52dp"
                android:layout_gravity="center" />
        </LinearLayout>
    </FrameLayout>

    <!-- The navigation drawer -->
    <ListView android:id="@+id/left_drawer"
        android:layout_width="260dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        android:divider="#e5e5e5"
        android:dividerHeight="1dp"
        android:background="@color/navigation_drawler"
        />
</android.support.v4.widget.DrawerLayout>